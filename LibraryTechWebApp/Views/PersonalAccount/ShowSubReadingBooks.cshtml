@model LibraryTechWebApp.Models.BooksPageModel

@{
    ViewData["Title"] = "Profile";
    Layout = "PersonalAccountLayout";
}

<div>
    <h1></h1>
    <h3 class="text-center">Books by subscription</h3>
    <hr />
    <div class="bs-component">
        <div class="row justify-content-center">
            @foreach (var b in Model.Books)
            {
                @await Html.PartialAsync("ProfileSubBooksPartialView", b)
            }
        </div>
    </div>
</div>

<div class="row justify-content-md-center">
    <div page-model="@Model.Info" page-action="ShowSubReadingBooks" class="col-md-auto"></div>
</div>